{% extends 'docs.html.twig' %}

{% set collection = page.collection() %}

{% block content %}
    <div id="container">

            {% set blog_image = page.media.images|first.grayscale().contrast(20).brightness(-100).colorize(-35,81,122) %}

            {% if blog_image %}
            <div class="flush-top blog-header blog-header-image">
            {% else %}
                <div class="blog-header">
            {% endif %}

                    {{ page.content }}
                </div>

                <hr>

                <div class="content-wrapper blog-content-list grid pure-g">
                    <div id="listing" class="block pure-u-1-2 h-feed">
                        {% for child in collection %}
                            {% include 'partials/blog_item.html.twig' with {'blog':page, 'page':child, 'truncate':true} %}
                        {% endfor %}

                        {% if config.plugins.pagination.enabled and collection.params.pagination %}
                            {% include 'partials/pagination.html.twig' with {'base_url':page.url, 'pagination':collection.params.pagination} %}
                        {% endif %}
                    </div>

                </div>
            </div>
    </div>
{% endblock %}

